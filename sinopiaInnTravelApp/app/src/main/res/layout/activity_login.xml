<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@android:color/black"
    android:measureWithLargestChild="false"
    android:orientation="vertical"
    android:weightSum="2">

    <ImageView
        android:id="@+id/backgrounImage"
        android:scaleType="centerCrop"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="0.5"
        >




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:weightSum="3"
        android:gravity="bottom"
        android:id="@+id/viewA"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|bottom">




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TextLabel"
            android:padding="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/amenities"
                android:textColor="@android:color/white"
                android:hint="Please enter the check token you received in your email"
                android:text="lke12us5"

                android:drawableRight="@android:drawable/ic_secure"/>



        </android.support.design.widget.TextInputLayout>



        <Button
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorSecondary"
            android:background="@drawable/transparent_solid_with_primary_border"
            android:onClick="goToConfirmation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginbutton"
            android:layout_marginBottom="10dp"
            android:text="Check In"
            android:layout_alignParentBottom="true"
            />







    </LinearLayout>


</FrameLayout>
